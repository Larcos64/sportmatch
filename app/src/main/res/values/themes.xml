<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Sportmatch" parent="Theme.Material3.Dark.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryVariant</item>
        <!-- Accent color -->
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Theme.Sportmatch" parent="Base.Theme.Sportmatch" />

    <!-- Standard style for text input layout (Login) -->
    <style name="StyleTextInputLayotTextBoxLogin">
        <item name="textInputStyle">@style/Widget.MaterialComponents.AutoCompleteTextView.FilledBox</item>
        <item name="errorEnabled">true</item>
    </style>

    <!-- Standard style for text boxes in login -->
    <style name="StyleTextInputEditTextLogin">
        <item name="android:maxLines">1</item>
        <item name="android:textColorHint">@color/colorPrimary</item>
        <item name="android:colorAccent">@color/colorAccent</item>
    </style>

    <!-- Standard style for buttons -->
    <style name="StylePrimaryColoredButton" parent="Widget.Material3.Button.ElevatedButton">
        <item name="android:layout_margin">@dimen/five</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:backgroundTint">@color/colorPrimaryVariant</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/twenty</item>
        <item name="rippleColor">@color/colorAccent</item>
    </style>

    <!-- Google sign in button -->
    <style name="StyleGoogleSignInButton" parent="Widget.Material3.Button.Icon">
        <item name="android:layout_margin">@dimen/five</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/twenty</item>
        <item name="rippleColor">@color/colorAccent</item>
        <item name="icon">@drawable/googleg_standard_color_18</item>
    </style>
</resources>